<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffca3a"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/newlisticon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/img_telefono"/>
        <TextView
            android:id="@+id/txtTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="987374475"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/chkTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiero cambiar mi número telefónico"
            />

        <EditText
            android:id="@+id/txtNombreUsuarioEditar"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:hint="Nuevo numero"
            android:textStyle="italic"
            android:inputType="number"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnAceptar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:text="@string/btnPopCuentaAceptar"/>
            <Button
                android:id="@+id/btnSalir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:text="@string/regBtnVolver"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>